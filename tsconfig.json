{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES6",
    "lib": ["ES2017", "DOM"],
    "outDir": "./js",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src//*"],
  "exclude": ["node_modules"]
}
